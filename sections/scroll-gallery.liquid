{{ 'x-scroll-gallery.css' | asset_url | stylesheet_tag }}

<section class="x-scroll-section" data-x-scroll-section>
    <div class="x-scroll-section__inner">
        <div class="x-scroll-section__inner-wrapper">
            {% if section.settings.heading != blank %}
                <h2 class="x-scroll-section__heading">
                    {{ section.settings.heading }}
                </h2>
            {% endif %}

            {% if section.settings.text != blank %}
                <div class="x-scroll-section__description">
                    {{ section.settings.text }}
                </div>
            {% endif %}

            {% if section.blocks.size > 0 %}
                {%- comment -%} Desktop gallery {%- endcomment -%}
                <div class="x-scroll-gallery x-scroll-gallery--desktop" data-x-scroll-gallery>
                    {% for block in section.blocks %}
                        {% if block.settings.image != blank %}
                            <div class="x-scroll-gallery__item" {{ block.shopify_attributes }}>
                                <img
                                        class="x-scroll-gallery__image"
                                        src="{{ block.settings.image | img_url: '800x800' }}"
                                        alt="{{ block.settings.alt | escape }}"
                                        loading="lazy"
                                >
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>

                {%- comment -%} Mobile Swiper gallery {%- endcomment -%}
                <div class="x-scroll-gallery-mobile swiper" data-x-scroll-gallery-mobile>
                    <div class="swiper-wrapper">
                        {% for block in section.blocks %}
                            {% if block.settings.image != blank %}
                                <div class="swiper-slide x-scroll-gallery-mobile__item" {{ block.shopify_attributes }}>
                                    <img
                                            class="x-scroll-gallery-mobile__image"
                                            src="{{ block.settings.image | img_url: '800x800' }}"
                                            alt="{{ block.settings.alt | escape }}"
                                            loading="lazy"
                                    >
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="x-scroll-gallery-mobile__pagination swiper-pagination"></div>
                </div>
            {% endif %}
        </div>
    </div>
</section>



{{ 'x-scroll-gallery.js' | asset_url | script_tag }}

{% schema %}
{
  "name": "X Scroll Gallery",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title",
      "default": "X Scroll Gallery"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Description",
      "default": "<p>Описание секции X Scroll Gallery.</p>"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "alt", "label": "Alt text" }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "X Scroll Gallery",
      "category": "Image"
    }
  ]
}
{% endschema %}
